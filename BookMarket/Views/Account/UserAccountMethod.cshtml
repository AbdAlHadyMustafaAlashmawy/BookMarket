@using BookMarket.Models
@model Account
@{
    ViewData["Title"] = "UserAccount";
}

<h1>User Account</h1>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    hr {
        margin-top: 20px;
        margin-bottom: 20px;
        border: 0;
        border-top: 1px solid #dee2e6;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 5px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .col-md-6 {
        width: calc(50% - 10px);
    }

    .profile-pic {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin: 0 auto;
        display: block;
        margin-bottom: 20px;
    }

    .upload-btn {
        display: block;
        margin: 0 auto;
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .upload-btn:hover {
            background-color: #0056b3;
        }

    @@media (max-width: 767px) {
        .col-md-6 {
            width: 100%;
            margin-bottom: 20px;
        }
    }

</style>

<script>
    function previewFile() {
        var preview = document.getElementById('previewImage');
        var file = document.getElementById('imageFile').files[0];
        var reader = new FileReader();

        reader.onloadend = function () {
            preview.src = reader.result;
            preview.style.display = 'block'; // Show the image after preview
        };

        if (file) {
            reader.readAsDataURL(file);
        } else {
            preview.src = "";
        }
    }

    function saveChanges() {
        // Trigger upload via AJAX
        var formData = new FormData();
        var file = document.getElementById('imageFile').files[0];
        formData.append('file', file);

        // Send AJAX request
        fetch('@Url.Action("Upload", "Account")', {
            method: 'POST',
            body: formData
        })
            .then(response => {
                if (response.ok) {
                    // If upload successful, reload the page to display the uploaded image
                    location.reload();
                } else {
                    // Handle error
                    console.error('Upload failed');
                }
            })
            .catch(error => console.error('Error:', error));
    }

    // Call previewFile when file input changes
    document.getElementById('imageFile').addEventListener('change', previewFile);

    // Call previewFile initially if the image exists
    if (document.getElementById('previewImage').src !== "") {
        previewFile();
    }
</script>
<form id="accountForm" method="post" action="@Url.Action("SaveChanges", "Account")">
    <hr />
    <div class="row">
        @using (Html.BeginForm("Upload", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="col-md-6">
                @if (!string.IsNullOrEmpty(Model.Uploaded_Photo_URl))
                {
                    <img src=$"~@Url.Content(Model.Uploaded_Photo_URl)" id="previewImage" class="profile-pic" />
                }
                else
                {
                    <img src="" id="previewImage" class="profile-pic" style="display: none;" /> <!-- Hide the image if no photo uploaded -->
                }               
                <legend>Upload Image</legend>
                <div>
                    <input type="file" id="imageFile" asp-for="@Model.facebookAcct" name="file" accept=".jpg" class="upload-btn" onchange="previewFile()" />
                </div>
            </div>
        }

        <div class="col-md-6">
            <div class="form-group">
                <label for="UserName">Username:</label>
                <input type="text" class="form-control" id="UserName" asp-for=UserName value="@Model.UserName" readonly />
            </div>
            <div class="form-group">
                <label for="PhoneNumber">Phone Number:</label>
                <input type="text" class="form-control" id="PhoneNumber" asp-for=PhoneNumber value="@Model.PhoneNumber" readonly />
            </div>
            <div class="form-group">
                <label for="Gmail">Gmail:</label>
                <input type="text" class="form-control" id="Gmail" asp-for=Gmail value="@Model.Gmail" readonly />
            </div>
            <div class="form-group">
                <label for="Birthday">Birthday:</label>
                <input type="text" class="form-control" id="Birthday" asp-for=Birthday value="@Model.Birthday.ToString("MM/dd/yyyy")" readonly />
            </div>
            <div class="form-group">
                <label for="Admin">Admin:</label>
                <input type="text" class="form-control" id="Admin" asp-for=Admin value="@Model.Admin" readonly />
            </div>
            <div class="form-group">
                <label for="facebookAcct">Facebook Account:</label>
                <input type="text" class="form-control" id="facebookAcct" value="@Model.facebookAcct" readonly />
            </div>
        </div>
    </div>

    <!-- Save Changes button -->
    <div class="row">
        <div class="col-md-12 text-center">
            <button type="button" class="btn btn-primary" onclick="saveChanges()">Save Changes</button>
        </div>
    </div>
</form>

