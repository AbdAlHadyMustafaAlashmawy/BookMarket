@model Writer
@{
    ViewData["Title"] = "Edit";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Person Information Form</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+zr/3znQwEKgjmxd4+Gg4JAI04IaqMOlZOf0nB6" crossorigin="anonymous">
</head>
<body>

    @{
        var writer = new Writer();
    }
    <h1>
    </h1>
    <div class="container">
        <h2 class="mt-5">Person Information Form</h2>

        <form action="@Url.Action("EditConfirm", "Writers")" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="mb-3">
                <label for="image" class="form-label">Picture (Image URL):</label>
                <input type="text" value="@Model.ProfilePictureUrl" class="form-control" id="image" name="ProfilePictureUrl" required>
            </div>

            <div class="mb-3">
                <label for="name" class="form-label">Name:</label>
                <input type="text" value="@Model.Name" class="form-control" id="name" name="Name" required>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description:</label>
                <textarea class="form-control" id="description" name="Description" rows="4" required>@Model.Description</textarea>
            </div>

            <div class="mb-3">
                <label for="religion" class="form-label">Religion:</label>
                <input type="text" value="@Model.Religion" class="form-control" id="religion" name="Religion" required>
            </div>

            <div class="mb-3">
                <label for="birthday" class="form-label">Birthday:</label>
                <input type="date" value="@Model.BirthDay.ToString("yyyy-MM-dd")" class="form-control" id="birthday" name="Birthday" required>
            </div>

            <div class="mb-3">
                <label for="deadOrAlive" class="form-label">Dead or Alive:</label>
                <select class="form-select" id="deadOrAlive" name="DeadOrAlive" required>
                    @if (Model.DeadOrAlive)
                    {
                        <option selected value="true">Alive</option>
                        <option value="false">Dead</option>
                    }
                    else
                    {
                        <option value="true">Alive</option>
                        <option selected value="false">Dead</option>
                    }

                </select>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>


    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-rMk+YlXKL55ifCM1aaKktvIT5zP5nSL5/QndlNT73NoB1cLYA+Q5ycj4yY9f8M+J" crossorigin="anonymous"></script>

</body>
</html>


